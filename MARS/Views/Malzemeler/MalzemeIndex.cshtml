@using MARS.Models.Entity
@model List<Malzemeler>
@{
    ViewBag.Title = "MalzemeIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Malzemeler</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">AnaSayfa</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Malzemeler</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Malzeme Listesi</h4>
                    <a href="/Malzemeler/MalzemeEkle/" type="button" class="btn btn-xs btn-success pull-right" style="margin: 6px">Yeni Malzeme</a>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-bldplani">
                            <thead>
                                <tr>
                                    <th>Grup Sınıf Numarası</th>
                                    <th>NIIN</th>
                                    <th>Adı</th>
                                    <th>Uzun Tanımı</th>
                                    <th>Birim</th>
                                    <th>Dokuman Oluştur</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            @foreach (var m in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@m.MalzemeTurleri.MalzemeTurAd</td>
                                        <td>@m.NIIN</td>
                                        <td>@m.MalzemeAdi</td>
                                        <td>@m.Birim</td>

                                        <td>
                                            <div class="btn-group">
                                                <button data-toggle="dropdown" class="btn btn-xs btn-primary">İşlemler <span class="caret"></span></button>
                                                <ul class="dropdown-menu">
                                                    <li><a href="/Malzemeler/MalzemeGetir/@m.MalzemeId">Güncelle</a></li>
                                                    <li><a href="/Malzemeler/MalzemeSil/@m.MalzemeId">Sil</a></li> 
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

