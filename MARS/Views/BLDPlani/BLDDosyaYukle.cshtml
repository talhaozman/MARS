
@{
    ViewBag.Title = "BLDDosyaYukle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("BLDDosyaYukle", "BLDPlani", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>BLD Planları</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">BLD Planları</a>
                </li>
                <li class="breadcrumb-item active">
                    <strong>BLD Dosya Yükle</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h4>BLD Planı Dosya Yükle</h4>
                    </div>
                    <div class="ibox-content">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>Dosya Adı</th>
                                        <th>Link</th>

                                    </tr>
                                </thead>
                                @for (var i = 0; i <= Model.Count - 1; i++)
                                {
                                    <tbody>
                                        <tr>
                                            <td>@Model[i].ToString()</td>
                                            <td>@Html.ActionLink("Download", "Download", new { filename = Model[i].ToString() })</td>
                                        </tr>
                                    </tbody>
                                }
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h4>BLD Planı Dosya Yükle</h4>
                    </div>
                    <div class="ibox-content">

                        <div class="card-box table-responsive">
                            <label for="file">Dosya Yükle: </label>
                            <input type="file" name="file" id="file" />
                            <br> <br>
                            <input type="submit" value="Dosya Yükle" />
                            <br><br>
                            @ViewBag.Message
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}