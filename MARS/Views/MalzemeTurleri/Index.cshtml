@using MARS.Models.Entity
@model List<MalzemeTurleri>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Malzeme Türleri</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">AnaSayfa</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Malzeme Türleri</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Malzeme Türleri</h4>
                    <a href="/MalzemeTurleri/MalzemeTurEkle/" type="button" class="btn btn-xs btn-primary pull-right" style="margin: 6px">Malzeme Türü Ekle</a>
                </div>


                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Tür No</th>
                                    <th>Adı</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            @foreach (var m in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@m.TurNo</td>
                                        <td>@m.MalzemeTurAd</td>

                                        <td>
                                            <a href="/MalzemeTurleri/MalzemeTurGetir/@m.MalzemeTurId" type="button" class="btn btn-xs btn-success" style="margin: 6px">Güncelle</a>
                                            <a href="/MalzemeTurleri/MalzemeTurSil/@m.MalzemeTurId" type="button" class="btn btn-xs btn-danger" style="margin: 6px">Sil</a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


