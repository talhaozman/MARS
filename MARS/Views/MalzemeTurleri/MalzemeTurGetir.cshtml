@model MARS.Models.Entity.MalzemeTurleri
@{
    ViewBag.Title = "MalzemeTurGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Malzeme Tür Güncelle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/MalzemeTurleri/Index/">MalzemeTurleri</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Malzeme Tur Güncelle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<br />
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>BLD Planı Güncelle</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        @using (Html.BeginForm("MalzemeTurGuncelle", "MalzemeTurleri", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.MalzemeTurId)
                            <label>Proje Kodu</label>
                            @Html.TextBoxFor(x => x.TurNo, new { @class = "form-control" })
                            <br /><br />
                            <label>Doküman No</label>
                            @Html.TextBoxFor(x => x.MalzemeTurAd, new { @class = "form-control" })
                            <br />
                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <button class="btn btn-white btn-sm" type="submit">Vazgeç</button>
                                    <button class="btn btn-warning btn-sm" type="submit">Güncelle</button>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

