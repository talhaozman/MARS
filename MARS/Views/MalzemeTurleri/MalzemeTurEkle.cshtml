@model MARS.Models.Entity.MalzemeTurleri
@{
    ViewBag.Title = "MalzemeTurEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Malzeme Türü Ekle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/MalzemeTurleri/Index/">MalzemeTurleri</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Malzeme Türü Ekle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<br />
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Malzeme Türü Ekle</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div class="form-group">
                            <label>Tür No</label>
                            @Html.TextBoxFor(x => x.TurNo, new { @class = "form-control" })
                            <br /><br />
                            <label>Adı</label>
                            @Html.TextBoxFor(x => x.MalzemeTurAd, new { @class = "form-control" })
                            <br />
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-white btn-sm" type="submit">Vazgeç</button>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>