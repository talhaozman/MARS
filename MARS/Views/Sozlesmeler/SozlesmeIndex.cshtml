@using MARS.Models.Entity
@model List<Sozlesmeler> 
@{
    ViewBag.Title = "SozlesmeIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Sözleşmeler</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">AnaSayfa</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Sözleşmeler</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Sözleşme Listesi</h4>
                    <a href="/Sozlesmeler/SozlesmeEkle/" type="button" class="btn btn-xs btn-primary pull-right" style="margin: 6px">Yeni Sözleşme</a>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-sozlesmeler">
                            <thead>
                                <tr>
                                    <th>Proje Kodu</th>
                                    <th>İdari</th>
                                    <th>Yüklenici</th>
                                    <th>Alt Yüklenici</th>
                                    <th>Tedarikçi</th>
                                    <th>İşlemler</th>

                                </tr>
                            </thead>
                            @foreach (var s in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@s.Projeler.ProjeKodu</td>
                                        <td>@s.Idari</td>
                                        <td>@s.Yuklenici</td>
                                        <td>@s.AltYuklenici</td>
                                        <td>@s.Tedarikciler</td>
                                        <td>
                                            <a href="/Sozlesmeler/SozlesmeGetir/@s.SozlesmeId" type="button" class="btn btn-xs btn-success" style="margin: 6px">Güncelle</a>
                                            <a href="/Sozlesmeler/SozlesmeSil/@s.SozlesmeId" type="button" class="btn btn-xs btn-danger" style="margin: 6px">Sil</a>
                                            <a href="/Sozlesmeler/SozlesmeDosyaYukle/@s.SozlesmeId" type="button" class="btn btn-xs btn-warning" style="margin: 6px">Dosya Yükle</a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



