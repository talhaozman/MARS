@model MARS.Models.Entity.DokumanListe
@{
    ViewBag.Title = "DokumanGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Dokuman Güncelle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/DokumanListe/ListeIndex/">Doküman Listesi</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Dokuman Güncelle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<br />
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Doküman Güncelle</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        @using (Html.BeginForm("DokumanGuncelle", "DokumanListe", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.DokumanListeId)
                            <label>Proje Kodu</label>
                            @Html.DropDownListFor(x => x.ProjeId, (List<SelectListItem>)ViewBag.dgr3, "Doküman ekleyeceğiniz projeyi seçiniz.", new { @class = "form-control", id = "proje" })
                            <br /><br />
                            <label>Tek.Dok.Adı</label>
                            @Html.TextBoxFor(x => x.TekdokAd, new { @class = "form-control" })
                            <br />
                            <label>Tek.Dok.No</label>
                            @Html.TextBoxFor(x => x.TekdokNo, new { @class = "form-control" })
                            <br />
                            <label>Tek.Dok.Tipi</label>
                            @Html.TextBoxFor(x => x.TekdokTip, new { @class = "form-control" })
                            <br />


                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <button class="btn btn-white btn-sm" type="submit">Vazgeç</button>
                                    <button class="btn btn-warning btn-sm" type="submit">Güncelle</button>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
            $(document).ready(function () {
                $('#proje').select2();
                allowClear: true
            });
    </script>

}

