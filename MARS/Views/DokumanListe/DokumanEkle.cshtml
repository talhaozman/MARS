@model MARS.Models.Entity.DokumanListe
@{
    ViewBag.Title = "DokumanEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Doküman Ekle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/DokumanListe/ListeIndex/">Doküman Listesi</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Doküman Ekle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<br />
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Doküman Ekle</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div class="form-group">

                            <label>Proje Kodu</label>
                            @Html.DropDownListFor(x => x.ProjeId, (List<SelectListItem>)ViewBag.dgr2, "Doküman ekleyeceğiniz projeyi seçiniz.", new { @class = "form-control", id = "proje" })
                            <br /><br />
                            <label>Tek.Dok.Adı</label>
                            @Html.TextBoxFor(x => x.TekdokAd, new { @class = "form-control" })
                            <br />
                            <label>Tek.Dok.No</label>
                            @Html.TextBoxFor(x => x.TekdokNo, new { @class = "form-control" })
                            <br />
                            <label>Tek.Dok.Tipi</label>
                            @Html.TextBoxFor(x => x.TekdokTip, new { @class = "form-control" })
                            <br />

                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-white btn-sm" type="submit">Vazgeç</button>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script>
            $(document).ready(function () {
                $('#proje').select2();
                allowClear: true
            });
    </script>

}



