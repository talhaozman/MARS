@using MARS.Models.Entity
@model List<PBSKart>
@{
    ViewBag.Title = "PBSIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Bakım Katları</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">AnaSayfa</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Bakım Katları</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Bakım Katları</h4>
                    <a href="/BakimKartlari/PbsEkle/" type="button" class="btn btn-xs btn-primary pull-right" style="margin: 6px">Bakım Kartı Ekle</a>
                </div>


                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Dokuman No</th>
                                    <th>Gemi / Birlik Sistemi</th>
                                    <th>Alt Sistem</th>
                                    <th>Sistem</th>
                                    <th>Cihaz</th>
                                    <th>BİK Kodu</th>
                                    <th>Dosyalar</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            @foreach (var b in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@b.DokumanListe.TekdokNo</td>
                                        <td>@b.GemiBirlikSistemi</td>
                                        <td>@b.AltSistem</td>
                                        <td>@b.Sistem</td>
                                        <td>@b.Cihaz</td>
                                        <td>@b.BikKodu</td>
                                        <td>
                                            <a href="/BLDPlani/BLDDosyaYukle/" type="button" class="btn btn-xs btn-info" style="margin: 6px">Dosyalar</a>
                                        </td>

                                        <td>
                                            <a href="/BLDPlani/PlanGetir/@b.PBSKartId" type="button" class="btn btn-xs btn-success" style="margin: 6px">Güncelle</a>
                                            <a href="/BLDPlani/PlanSil/@b.PBSKartId" type="button" class="btn btn-xs btn-danger" style="margin: 6px">Sil</a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


