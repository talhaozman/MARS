@using MARS.Models.Entity
@model List<Urunler>
@{
    ViewBag.Title = "UrunlerIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Ürün Teknik Özellikleri</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">AnaSayfa</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Ürün Teknik Özellikleri</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Ürün Teknik Özellikleri</h4>
                </div>
                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Marka</th>
                                    <th>Model</th>
                                    <th>Üretici Firma </th>
                                    <th>Üretici Firma Parça No</th>
                                    <th>Resim</th>
                                    <th>Dosyalar</th>
                                </tr>
                            </thead>
                            @foreach (var u in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@u.UrunAdi</td>
                                        <td>@u.Marka</td>
                                        <td>@u.Model</td>
                                        <td>@u.UreticiFirmaAdi</td>
                                        <td>@u.UreticiFirmaParcaNo</td>
                                        <td><img src="@u.ResimYolu" style="width:50px; height:50px;" /></td>
                                        <td>
                                            @Html.ActionLink("Download", "Download", new { fileName = u.UrunDosyaYolu })
                                        </td>


                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


