@model MARS.Models.Entity.DegisiklikIzleme
@{
    ViewBag.Title = "DegisiklikEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Değişiklik Sayfası Oluştur</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/DokumanListe/ListeIndex/">DokumanListe</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Değişiklik Sayfası Oluştur</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<br />
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Dokuman Oluştur</h5>
                </div>
                <div class="ibox-content">
                    <a href="~/KapakSayfa/KapakEkle/" type="button" class="btn btn-primary">Kapak Sayfası</a>
                    <a href="~/OnaySayfasi/OnaySayfaIndex/" type="button" class="btn btn-secondary">Onay Sayfası</a>
                    <a href="~/DegisiklikIzleme/DegisiklikEkle/" type="button" class="btn btn-success">Değişiklik İzleme</a>
                    <a href="~/ReferansDokuman/ReferansEkle/" type="button" class="btn btn-info">Referans Dokümanlar</a>
                    <a href="~/YazilimVersiyon/YazilimEkle/" type="button" class="btn btn-warning">Yazılım ve Versiyon</a>
                    <a href="~/EmniyetTalimatlari/EmniyetEkle/" type="button" class="btn btn-light">Emniyet Talimatları</a>
                    <a href="~/Urunler/UrunEkle/" type="button" class="btn btn-danger">Ürün Teknik Özellikleri</a>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Değişiklik İzleme</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div class="form-group">
                            <label>Dokuman No</label>
                            @Html.DropDownListFor(x => x.DokumanListeId, (List<SelectListItem>)ViewBag.dgr22, "Doküman Seçiniz.", new { @class = "form-control", id = "dokuman" })
                            <br /><br />
                            <label>Sürüm Tarihi</label>
                            <input class="form-control" type="date" name="SurumTarihi" />
                            <br />
                            <label>Sürüm No</label>
                            @Html.TextBoxFor(x => x.SurumNo, new { @class = "form-control" })
                            <br />
                            <label>Doküman Onay No</label>
                            @Html.TextBoxFor(x => x.DokOnayNo, new { @class = "form-control" })
                            <br />
                            <label>Onay Tarihi</label>
                            <input class="form-control" type="date" name="OnayTarihi" />
                            <br />
                            <label>Açıklama</label>
                            @Html.TextBoxFor(x => x.DegAciklama, new { @class = "form-control" })
                            <br />
                            <label> Değişiklik Yapılan Sayfa/Bölüm</label>
                            @Html.TextBoxFor(x => x.DegYapSayfa, new { @class = "form-control" })
                            <br />
                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <button class="btn btn-white btn-sm" type="submit">Vazgeç</button>
                                    <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $('#dokuman').select2();
            allowClear: true
        });
    </script>

}

