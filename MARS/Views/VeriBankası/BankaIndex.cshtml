@using MARS.Models.Entity
@model List<VeriBankasi>
@{
    ViewBag.Title = "BankaIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

c<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Doküman Veri Bankası</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">AnaSayfa</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Doküman Veri Bankası</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h4>Doküman Veri Bankası</h4>
                </div>


                <div class="ibox-content">

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Doküman No</th>
                                    <th>Doküman Adı</th>
                                    <th>Doküman Türü</th>
                                    <th>Dosyalar</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            @foreach (var d in Model)
                            {
                                <tbody>
                                    <tr>
                                        <td>@d.DokumanNo</td>
                                        <td>@d.DokumanAdi</td>
                                        <td>@d.DokumanTuru</td>
                                        <td>
                                            <a href="/BLDPlani/BLDDosyaYukle/" type="button" class="btn btn-xs btn-info" style="margin: 6px">Dosyalar</a>
                                        </td>

                                        <td>
                                            <a href="/BLDPlani/PlanGetir/@d.VeriBankasiId" type="button" class="btn btn-xs btn-success" style="margin: 6px">Güncelle</a>
                                            <a href="/BLDPlani/PlanSil/@d.VeriBankasiId" type="button" class="btn btn-xs btn-danger" style="margin: 6px">Sil</a>
                                        </td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

