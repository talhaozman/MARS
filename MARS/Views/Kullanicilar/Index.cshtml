
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>MARS| Giriş</title>

    <link href="~/Tema/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Tema/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Tema/css/animate.css" rel="stylesheet">
    <link href="~/Tema/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>

                <h1 class="logo-name">DSG</h1>

            </div>
            <h3>Mars Yazılıma Hoşgeldiniz</h3>
            <p>Lütfen Giriş Yapınız...</p>
            <div class="form-group">
                @if (ViewBag.hata != null)
                {
                    <p class="text-danger">@ViewBag.hata</p>
                }
            </div>
            <form method="post" class="m-t" role="form">
                <div class="form-group">
                    <input type="email"  name="KullaniciMail" class="form-control" placeholder="Kullanıcı Adı">
                </div>
                <div class="form-group">
                    <input type="password" name="KullaniciSifre" class="form-control" placeholder="Şifre">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Oturum Aç</button>

                <a href="/Kullanicilar/ResetPassword/"><small>Şifremi Unuttum?</small></a>

            </form>
            <p class="m-t"> <small>Copyright< DSG DEFENSE &copy; 2021</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Tema/js/jquery-3.1.1.min.js"></script>
    <script src="~/Tema/js/popper.min.js"></script>
    <script src="~/Tema/js/bootstrap.js"></script>

</body>

</html>