@model MARS.Models.Entity.Projeler
@{
    ViewBag.Title = "ProjeEkle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Proje Ekle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Projeler/ProjeIndex">Projeler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Proje Ekle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<br />
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Proje Oluşturun</h5>
                </div>
                <div class="ibox-content">
                    <form method="post">
                        <div class="form-group">

                            <label>Proje Kodu</label>
                            @Html.TextBoxFor(x => x.ProjeKodu, new { @class = "form-control" })
                            <br />
                            <label>Gemi Bordo Numarası</label>
                            @Html.TextBoxFor(x => x.GemiBordoNumarasi, new { @class = "form-control" })
                            <br />
                            <label>Yayım Tarihi</label>
                            <input class="form-control" type="date" placeholder="dd-mm-yyyy" name="YayimTarihi" />
                            <br />
                            <label>Revizyon</label>
                            @Html.TextBoxFor(x => x.Revizyon, new { @class = "form-control" })
                            <br />
                            <label>Revizyon Tarihi</label>
                            <input class="form-control" type="date" placeholder="dd-mm-yyyy" name="RevizyonTarihi" />

                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-4 col-sm-offset-2">
                                <button class="btn btn-white btn-sm" type="submit">Vazgeç</button>
                                <button class="btn btn-primary btn-sm" type="submit">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





