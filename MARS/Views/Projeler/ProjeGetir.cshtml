@model MARS.Models.Entity.Projeler
@{
    ViewBag.Title = "ProjeGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Proje Güncelle</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/Projeler/ProjeIndex/">Projeler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Proje Güncelle</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<br />
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Proje Güncelle</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        @using (Html.BeginForm("ProjeGuncelle", "Projeler", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.ProjeId)
                            <label>Proje Kodu</label>
                            @Html.TextBoxFor(x => x.ProjeKodu, new { @class = "form-control" })
                            <br />
                            <label>Gemi Bordo Numarası</label>
                            @Html.TextBoxFor(x => x.GemiBordoNumarasi, new { @class = "form-control" })
                            <br />
                            <label>Yayım Tarihi</label>
                            @Html.TextBoxFor(x => x.YayimTarihi.Date, new { @class = "form-control" })
                            <br />
                            <label>Revizyon</label>
                            @Html.TextBoxFor(x => x.Revizyon, new { @class = "form-control" })
                            <br />
                            <label>Revizyon Tarihi</label>
                            @Html.TextBoxFor(x => x.RevizyonTarihi.Date, new { @class = "form-control" })


                            <div class="hr-line-dashed"></div>
                            <div class="form-group row">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <button class="btn btn-white btn-sm" type="submit">Vazgeç</button>
                                    <button class="btn btn-warning btn-sm" type="submit">Güncelle</button>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


